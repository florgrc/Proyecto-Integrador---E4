<%- include('../partials/head.ejs')  %>

<body>
   <%- include('../partials/header.ejs')  %>
   <form action="/products/cart" method="GET" class="productDetail-form">
      <div class="product-details">
         <div class="productDetailed">
            <p class="name"><%= producto.name %></p>
            <img src="/images/products/<%= producto.image %>" alt="200" width="200">
            <p class="variety"><%= producto.variety.name %></p>
            <p class="price"><% const formatter = new Intl.NumberFormat('en-US', {
               style: 'currency',
               currency: 'USD',
               minimumFractionDigits: 0
             })
             var value = producto.price%>
             <%= formatter.format(value) %></p>
            <p class="info"><%= producto.description %></p>
            <select name="cantidad" id="cantidad">
               <option value="0" selected disabled>Seleccione una cantidad</option>
               <option value="1">1</option>
               <option value="2">2</option>
               <option value="3">3</option>
               <option value="4">4</option>
            </select>
            <button type="submit" class="regularButton">Agregar al Carrito</button><br>
         </div>
      </div>
   </form>
   <div class="related">
      <h2>Productos relacionados</h2>
      <ol>
         <li>
            <img src="/images/products/vino1.jpg">
            <div class="line"></div>
            <div class="product-details">
               <p class="name">Alma Mora</p>
               <p class="price">$4.382</p>
            </div>
         </li>
         <li>
            <img src="/images/products/vino3.jpg">
            <div class="line"></div>
            <div class="product-details">
               <p class="name">Mendel</p>
               <p class="price">$1.264</p>
            </div>
         <li>
            <img src="/images/products/vino4.jpg">
            <div class="line"></div>
            <div class="product-details">
               <p class="name">Famiglia Bianchi</p>
               <p class="price">$510</p>
            </div>
         </li>
      </ol>
   </div>
   <%- include('../partials/footer.ejs')  %>
</body>

</html>