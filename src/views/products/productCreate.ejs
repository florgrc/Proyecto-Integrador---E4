<body>
 
  <%- include('../partials/header.ejs')  %> 
  
      <form action="/productCreate" method="POST" class="form-newpproduct-style">

      </form>


      <form action="/products/edit/:idProduct?_method=PUT" method="POST" class="form-editpproduct-style">
         <h3>Crear Producto</h3>
         <div class="back-edit">
         <div class="contenedor-editProduct">
            <div class="formulario-producto">
               <label for="">ID</label>
               <input type="number" name="productID" class="input-style">            
            </div>
         <div class="formulario-producto">
            <label for="">Nombre</label>
            <input type="text" name="productName" class="input-style">            
         </div>
         <div class="formulario-producto">
            <label for="">Descripción</label>
            <input type="text" name="productDetail" class="input-style">
         </div>
         <div class="formulario-producto">
            <label for="">Clasificación</label>
            <input type="text" name="productClass" class="input-style">
      </div>
      <div class="formulario-producto">
         <label for="">Variedad</label>
          <input type="text" name="variety" class="input-style">
    </div>
      <div class="formulario-producto">
         <label for="">Precio</label>
          <input type="text" name="productPrice" class="input-style">
    </div>
         <div class="formulario-producto">
            <label for="">Foto</label>
            <input type="file" name="avatar" class="input-style">
        </div>
         
         <button type="submit" onclick="alert('Producto Guardado')" class="button-style-save">Guardar</button><br>
         <button type="reset" onclick="alert('Producto Eliminado')" class="button-style-hide">Eliminar</button><br>
      </div>

</div>
</div>
</div>

