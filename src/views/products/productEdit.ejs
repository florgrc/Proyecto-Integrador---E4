<%- include('../partials/head.ejs')  %>
<body>
  
  <%- include('../partials/header.ejs')  %>
<section>

   <div>
      <h3 class="title-h3">Modificar Producto</h3>
      <form action="/products/edit/<%= productToEdit.idProduct%>?_method=PUT" method="POST" class="form-editpproduct-style">
   </div>   
      <table>
         <thead>
            <th> Id </th>
            <th> Nombre </th>
            <th> Descripción </th>
            <th> Clasificación </th>
            <th> Variedad  </th>
            <th> Precio </th>
            <th> Featured </th>
            <th> Foto </th>
         
         </thead>
         <tbody>
            <tr>
                <td style="width : 50px"> 
                  <label for=""></label><%= productToEdit.idProduct%> 
               </td>
               <td> 
                  <input style="width : 150px;" type="text" name="name" value="<%= productToEdit.name %>" class="input-style">            
               </td>
               <td> 
                  <input style="width : 150px" type="text" name="description" value="<%= productToEdit.description %>" class="input-style">
               </td>
               <td> 
                <input style="width : 150px;" type="text" name="classification" value="<%= productToEdit.classification %>" class="input-style">
               </td>
               <td> 
                <input style="width : 150px;" type="text" name="variety" value="<%- productToEdit.variety %>" class="input-style">
               </td>
               <td> 
               <input style="width : 70px;" type="text" name="price" value="<%- productToEdit.price%>" class="input-style">
               </td>
               <td> 
               <input style="width : 130px;" type="text" name="featured" value="<%- productToEdit.featured%>" class="input-style">
               </td>
               <td>
               <input style="width : 130px;" type="file" name="image" class="input-style">
               </td>
               <td>
                  <button type="submit" onclick="alert('¿Estas seguro que deseas guardar los cambios?')" class="button-style-save">Modificar</button><br>
               </td>
               </tr>
            
          
         </tbody>
      </table>
   </form>


</section>
      <%- include('../partials/footer.ejs')  %>

   </body>
</html>
