<%- include('../partials/head.ejs')  %>

<body>
   <%- include('../partials/header.ejs')  %>

   <div class="loginBody">
      <form action="/users" method="POST" class="form-style" enctype="multipart/form-data">
         <div class="login-wrap">
            <div class="login-html">
                <img src="/images/users/<%= loggedUser.image %>" alt="Avatar" class="avatar">
                <label for="tab-1" class="tab">Hola <%= loggedUser.firstname %> <%= loggedUser.lastname %> </label>
                <label for="tab-1" class="tab">Tu información: </label>
               
               <div class="login-form">
                  <div class="sign-up-htm">
                     <div class="group">
                        <label for="user" class="label">Nombre</label>
                        <input id="user" type="text" name="firstname" class="input" placeholder=<%= loggedUser.firstname %>>
                        <% if (locals.errors && errors.firstname ) { %>
                        <%= errors.firstname.msg %>
                        <% } %>
                     </div>
                     <div class="group">
                        <label for="user" class="label">Apellido</label>
                        <input id="user" type="text" name="lastname" class="input" placeholder=<%= loggedUser.lastname %>>
                        <% if (locals.errors && errors.lastname ) { %>
                        <%= errors.lastname.msg %>
                        <% } %>
                     </div>
                     <div class="group">
                        <label for="email" class="label">Email</label>
                        <input id="email" type="email" name="email" placeholder="usuario@tudominio.com" class="input" placeholder=<%= loggedUser.email %>>
                        <% if (locals.errors && errors.email ) { %>
                        <%= errors.email.msg %>
                        <% } %>
                     </div>
                     <div class="group">
                        <label for="file-upload" class="custom-file-upload">
                           <i class="fas fa-cloud-upload-alt"></i> Subir imagen
                        </label>
                        <input id="file-upload" type="file" name="userAvatar" accept=".png, .jpg, .jpeg" required>
                        <% if (locals.errors && errors.avatar ) { %>
                        <%= errors.avatar.msg %>
                        <% } %>
                     </div>
                     <div class="group">
                        <label for="user" class="label">Contraseña</label>
                        <input id="pass" type="password" name="password" placeholder="Mínimo 8 caracteres"
                           class="input" placeholder=<%= loggedUser.password %>>
                        <% if (locals.errors && errors.password ) { %>
                        <%= errors.password.msg %>
                        <% } %>
                     </div>
                     <div class="group">
                        <label for="pass" class="label">Repetir Contraseña</label>
                        <input id="pass" type="password" class="input" data-type="password" placeholder=<%= loggedUser.password %>>
                     </div>
                     <div class="group">
                        <a href="#"><button type="submit" class="button" value="Registrarse">Modificar Información</button></a>
                     </div>
                     <div class="hr"></div>


                  </div>
               </div>
            </div>
         </div>
      </form>
   </div>

   <section>
    <div class="cart-product-frame">
       <div>
          <h3 class="title">Carrito de <%= loggedUser.firstname %> <%= loggedUser.lastname %> </h3>
       </div>
       <div class="cart-product">
          <img src="/images/vinos/Vino1.jpg" alt="Vino" width="80" height="80">
          <div class="name">Cuesta del Madero</div>
          <div class="type">Malbec</div>
          <div class="info">
             <select name="cantidad" id="cantidad">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
             </select>
          </div>
          <div class="discount">5% OFF</div>
          <div class="cart-box-price">$1.770</div>
          <div><a href="/productDetail"><i class="far fa-trash-alt"></i><button type="submit"
                   class="addToCart">Eliminar</button></a><br></div>
       </div>
    </div>
 </section>
 <section>
    <div class="checkout">
       <div class="pre-payment">
          <h3>Total </h3>
          <div class="cart-box-price">$1.681,5</div>
       </div>
       <div class="cart-product-frame">
          <div class="payment">
             <h3>Medios de pago </h3>
             <select name="pago" id="pago">
                <option value="0" selected disabled>Seleccione una opción</option>
                <option value="1">Transferencia o depósito (10% de descuento)</option>
                <option value="2">Tarjeta de crédito o débito</option>
                <option value="3">Mercado Pago</option>
                <option value="4">Pago Facil</option>
             </select>
          </div>
          <div class="cart-icons">
             <a href="/productDetail"><i class="fas fa-shopping-basket"></i><button type="submit"
                   class="regularButton">Seguir comprando</button></a><br>
             <a href="/Checkout"><i class="fas fa-sign-out-alt"></i><button type="submit" class="regularButton">Ir al
                   checkout</button></a><br>
          </div>
       </div>
 </section>
   <%- include('../partials/footer.ejs')  %>
</body>

</html>