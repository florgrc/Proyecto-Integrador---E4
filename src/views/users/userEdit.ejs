<%- include('../partials/head.ejs')  %>

<body>
   <%- include('../partials/header.ejs')  %>

   <div class="loginBody">
      <form action="/users/edit/<%= loggedUser.id%>?_method=PUT" method="POST"
         class="form-style" enctype="multipart/form-data">
         <div class="login-wrap">
            <div class="login-html">
                <img src="/images/users/<%= loggedUser.image %>" alt="Avatar" class="avatar">
                <label for="tab-1" class="tab">Hola <%= loggedUser.firstname %> <%= loggedUser.lastname %> </label>
                <label for="tab-1" class="tab">Tu información: </label>
               
               <div class="login-form">
                  <div class="sign-up-htm"> 
                     <div class="group">
                        <label for="user" class="label">Nombre</label>
                        <input id="user" type="text" name="firstname" class="input" placeholder=<%= loggedUser.firstname %>>
                        <% if (locals.errors && errors.firstname ) { %>
                        <%= errors.firstname.msg %>
                        <% } %>
                     </div>
                     <div class="group">
                        <label for="user" class="label">Apellido</label>
                        <input id="user" type="text" name="lastname" class="input" placeholder=<%= loggedUser.lastname %>>
                        <% if (locals.errors && errors.lastname ) { %>
                        <%= errors.lastname.msg %>
                        <% } %>
                     </div>
                     <div class="group">
                        <label for="email" class="label">Email</label>
                        <input id="email" type="email" name="email" placeholder="usuario@tudominio.com" class="input" placeholder=<%= loggedUser.email %>>
                        <% if (locals.errors && errors.email ) { %>
                        <%= errors.email.msg %>
                        <% } %>
                     </div>
                     <div class="group">
                         <input id="file-upload" type="file" name="userAvatar" accept=".png, .jpg, .jpeg" required> 
                         <% if (locals.errors && errors.avatar ) { %>
                            <%= errors.avatar.msg %>
                            <% } %>
                        <label for="file-upload" class="custom-file-upload">
                           <i class="fas fa-cloud-upload-alt"></i> Subir imagen
                        </label>

                     </div>
                     <div class="group">
                        <label for="user" class="label">Contraseña</label>
                        <input id="pass" type="password" name="password" placeholder="Mínimo 8 caracteres"
                           class="input" placeholder=<%= loggedUser.password %>>
                        <% if (locals.errors && errors.password ) { %>
                        <%= errors.password.msg %>
                        <% } %>
                     </div>
                     <div class="group">
                        <label for="pass" class="label">Repetir Contraseña</label>
                        <input id="pass" type="password" class="input" data-type="password" placeholder=<%= loggedUser.password %>>
                     </div>
                     <div class="group">
                        <a href="/users/profile"><button type="submit" class="button" value="Registrarse">Modificar Información</button></a>
                     </div>    
                  </div>
               </div>
            </div>

            </div>
         </div>
      </form>
   </div>

   <%- include('../partials/footer.ejs')  %>
</body>

</html>