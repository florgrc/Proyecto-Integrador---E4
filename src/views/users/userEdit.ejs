<%- include('../partials/head.ejs')  %>

<body>
   <%- include('../partials/header.ejs')  %>
   <div class="loginContainer">
      <div class="login-wrap">
         <div class="login-background">
            <form action="/users/edit/<%= user.id%>?_method=PUT" method="POST" class="form-style"
               enctype="multipart/form-data">
               <div class="login-html">
                  <img src="/images/users/<%= user.image %>" alt="Avatar" class="avatar">
                  <label for="tab-1" class="tab">Hola <%= user.firstname %> <%= user.lastname %> </label>
                  <label for="tab-1" class="tab">Tu información: </label>
                  <div class="login-form">
                     <div class="sign-up-htm">
                        <div class="group">
                           <label for="user" class="label">Nombre</label>
                           <input id="firstname" type="text" name="firstname" class="input" value=<%= user.firstname %>>
                           <small class="text-danger" id="firstNameError"></small>
                           <% if (locals.errors && errors.firstname ) { %>
                           <%= errors.firstname.msg %>
                           <% } %>
                        </div>
                        <div class="group">
                           <label for="user" class="label">Apellido</label>
                           <input id="lastname" type="text" name="lastname" class="input" value=<%= user.lastname %>>
                           <small class="text-danger" id="lastNameError"></small>
                           <% if (locals.errors && errors.lastname ) { %>
                           <%= errors.lastname.msg %>
                           <% } %>
                        </div>
                        <div class="group">
                           <label for="email" class="label">Email</label>
                           <input id="email" type="email" name="email" class="input" value=<%= user.email %>>
                           <small class="text-danger" id="emailError"></small>
                           <% if (locals.errors && errors.email ) { %>
                           <%= errors.email.msg %>
                           <% } %>
                        </div>
                        <div class="group">
                           <input id="file-upload" type="file" name="userAvatar" accept=".png, .jpg, .jpeg" required>
                           <% if (locals.errors && errors.avatar ) { %>
                           <%= errors.avatar.msg %>
                           <% } %>
                           <label for="file-upload" class="custom-file-upload">
                              <i class="fas fa-cloud-upload-alt"></i> Subir imagen
                           </label>

                        </div>
                        <div class="group">
                           <label for="user" class="label">Contraseña</label>
                           <input id="password" type="password" name="password" placeholder="Mínimo 8 caracteres"
                              class="input" placeholder="Ingrese su nueva contraseña">
                           <small class="text-danger" id="passwordError"></small>
                           <% if (locals.errors && errors.password ) { %>
                           <%= errors.password.msg %>
                           <% } %>
                        </div>
                        <div class="group">
                           <label for="pass" class="label">Repetir Contraseña</label>
                           <input id="repassword" type="password" name="repassword" class="input" data-type="password">
                        </div>
                        <small class="text-danger" id="repasswordError"></small>
                        <div class="group">
                           <a href=""><button type="submit"
                                 onclick="return confirm('¿Estas seguro que deseas actualizar tu perfil? Deberás volver a loguearte en el sitio')"
                                 class="button" value="Registrarse">Modificar Información</button></a>
                        </div>
                     </div>
                  </div>
               </div>
         </div>
      </div>
   </div>
   </form>
   </div>

   <%- include('../partials/footer.ejs')  %>
   <script src="/js/register.js"></script>
</body>

</html>