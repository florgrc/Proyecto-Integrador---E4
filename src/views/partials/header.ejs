<header class="header">
  <article class="header-top">
    <div class="logo"><a href="/"><img src="/images/LogoWeb.svg" alt="logo" class="logo"></a></div>
    <form class="search" action="/busqueda" method="GET">
      <label for="busqueda"></label>
      <input type="text" placeholder="¿Qué estás buscando?" name="search">
      <button type="submit"><i class="fa fa-search"></i></button>
    </form>
    <div class="icons">
      <% if (locals.isLogged) { %>
        
        <div class="dropdown">
          <a class="nav-link dropdown" href="#" id="dropUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          <img src="/images/users/<%= loggedUser.image %>" width="15" style="border-radius: 100%"> Hi <%= loggedUser.firstname %>
        </a>
          <div class="dropdown-content">
            <a href="/users/profile">Mi perfil</a>
            <a href="/users/logout">Logout</a> 
          </div>
          <i class="fas fa-sort-down"></i>
        </br>
        </div>
        <% } else { %>
      <a href="/users/login"><i class="fas fa-user-circle"></i></a>
      <a href="/users/register">Registrate</a>
      <a href="/users/login">Login</a>

        <% } %>
        <a href="/products/cart"><i class="fas fa-shopping-cart"></i></a>
    </div>
  </article>
  <article class="sections">
    <a href="/products/catalogue">Nuestros Productos</a>
    <a href="#">Combos</a>
    <a href="#">Promociones</a>
    <a href="#">Viví tu experiencia</a>
    <a href="#">Quienes somos</a>
    
  </article>

</header>
<div class="content">
  <!-- apertura de div que engloba el contenido de la pagina, necesario para que el footer quede fijo al pie de la pagina -->