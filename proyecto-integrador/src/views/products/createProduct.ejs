    </article>
   
  </header>
  
      <form action="/createProduct" method="POST" class="form-newpproduct-style">
         <h3>Nuevo Producto</h3>
         <div class="contenedor-newProduct">
         <div class="formulario-producto">
            <label for="">Nombre del producto</label>
            <input type="text" name="productName" size="50">
         </div>
         <div class="formulario-producto">
            <label for="">Descripción</label>
            <input type="text" name="productDetail" size="60">
         </div>
         <div class="form-foto">
            <label for="">Foto</label>
            <input type="file" name="avatar">
        </div>
         <div class="formulario-producto">
               <label for="">Clasificación</label>
               <input type="text" name="productClass" size="60">
         </div>
         <div class="formulario-producto">
               <label for="">Variedad</label>
               <input type="text" name="productClass" size="63">
         </div>
         <div class="formulario-producto">
              <label for="">Precio</label>
               <input type="text" name="productPrice" size="65">
         </div>
         </div>
         <button type="submit" class="create">Agregar</button><br>
         <button type="reset" class="delete">Borrar</button>
      </div>
      </form>
      <%- include('../partials/footer.ejs')  %>
   </body>
